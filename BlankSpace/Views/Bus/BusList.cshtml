<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial No
            </th>
            <th class=" h3 ">
                Bus Name
            </th>
            <th class=" h3  ">
                Total Seat
            </th>
            <th class=" h3  ">
                Bus Number
            </th>
            <th class=" h3  ">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class=" h4  ">@item.BusSerial</td>
                <td class=" h4  ">@item.CoachName</td>
                <td class=" h4  ">@item.TotalSeat</td>
                <td class=" h4  ">@item.BusNumber</td>
                <td class=" h4  ">
                  <a asp-action="UpdateBus" asp-controller="Bus" asp-route-id="@item.BusId"><i class="fa fa-pencil-square-o" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="BusDetails" asp-controller="Bus" asp-route-id="@item.BusId"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="DeleteBus" asp-controller="Bus" asp-route-id="@item.BusId"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>

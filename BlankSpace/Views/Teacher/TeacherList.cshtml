@model List<BlankSpace.ViewModels.Teacher>

<p class="h2" style="text-align:center;">Teacher List<br /><div style="border-bottom:1px solid #686868"></div> </p>

<div>
    <form asp-action="TeacherList" method="post">
        <div class="container h-100" aria-hidden="true">
            <div class="d-flex justify-content-center h-100">
                <div class="searchbar">
                    <input class="search_input" type="text" name="search" placeholder="Search...">
                    @*<a href="#" class="search_icon"><i class="fas fa-search"></i></a>*@
                </div>
            </div>
        </div>
    </form>
</div>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial No
            </th>
            <th class="h3">
                Teacher Name
            </th>
            <th class=" h3 ">
                University Id
            </th>
            <th class=" h3 ">
                Email
            </th>
            <th class=" h3 ">
                Password
            </th>
            <th class=" h3 ">
                Phone
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class=" h4  ">@item.TeacherId</td>
                <td class=" h4  ">@item.TeacherName</td>
                <td class=" h4  ">@item.UniversityId</td>
                <td class=" h4  ">@item.Email</td>
                <td class=" h4  ">@item.Password</td>
                <td class=" h4  ">@item.Phone</td>

                <td class=" h4  ">
                    <a asp-action="UpdateTeacher" asp-controller="Teacher" asp-route-id="@item.TeacherId"><i class="fa fa-pencil-square-o" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="TeacherDetails" asp-controller="Teacher" asp-route-id="@item.TeacherId"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="DeleteTeacher" asp-controller="Teacher" asp-route-id="@item.TeacherId"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
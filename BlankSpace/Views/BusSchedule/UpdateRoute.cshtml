@model BlankSpace.ViewModels.PlaceVm

@{
    ViewData["Title"] = "UpdateRoute";
}

<h2 style="text-align:center">Update Route</h2>


<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info text-center" role="alert">
                <button type="button" class="close" aria-label="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["msg"]
            </div>
        }
        <form asp-action="UpdateRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="PlaceName" class="control-label h4"></label>
                <input asp-for="PlaceName" class="form-control" />
                <input asp-for="PlaceVmId" type="hidden" />
                <span asp-validation-for="PlaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
        <div>
            <a asp-action="RouteList">Back to List</a>
        </div>

    </div>
</div>



@model BlankSpace.ViewModels.Student

@{
    ViewData["Title"] = "AddStudent";
}
<h2 style="text-align:center">Add New Student</h2>
<hr />

<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info text-center" role="alert">
                <button type="button" class="close" aria-label="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["msg"]
            </div>
        }
    <form asp-action="AddStudent">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="StudentName" class="control-label h4">Student Name</label>
            <input asp-for="StudentName" class="form-control" />
            <span asp-validation-for="StudentName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UniversityId" class="control-label h4">University ID</label>
            <input asp-for="UniversityId" class="form-control" />
            <span asp-validation-for="UniversityId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label h4">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label h4">Set Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label h4">Phone</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
        <div>
            <a asp-action="StudentList">Back to Student List</a>
        </div>
    </div>
</div>

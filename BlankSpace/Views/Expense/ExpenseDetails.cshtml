@model BlankSpace.ViewModels.Expense

@{
    ViewData["Title"] = "ExpenseDetails";
}
<script>

        function printDiv() {
            var divContents = document.getElementById("GFG").innerHTML;
            var a = window.open('', '', '', '', '', '');
            a.document.write(divContents);
            a.document.close();
            a.print();
        }
</script>
<div id="GFG">
    <h2 style="text-align:center">
        <strong>Expense Details </strong>
    </h2>
    <hr />
    <input type="button" value="Print" onclick="printDiv()">
    <div class="col-md-4 col-md-offset-4">



        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ExpenseId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ExpenseId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BusId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BusId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Narration)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Narration)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DriverName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DriverName)
            </dd>
        </dl>
        <div>
            <a asp-action="ExpenseList">Back to Expense List</a>
        </div>

    </div>
</div>

